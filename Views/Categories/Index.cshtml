@model IEnumerable<ActivityManager.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>All categories</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Color
            </th>
            <th>
                Description
            </th>
            <th>
                Activities
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            var categoryBackground = item != null
            ? $"rgb({item.R},{item.G},{item.B})"
            : "transparent";
            string badgeTextColor;
            if(item != null) {
                var brightness = (0.299 * item.R) + (0.587 * item.G) + (0.114 * item.B);
                badgeTextColor = brightness > 186 ? "#000" : "#fff";
            } else {
                badgeTextColor = "#212529";
            }
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <span class="badge" style="background-color:@categoryBackground; color:@badgeTextColor">
                            R: @item.R G: @item.G B: @item.B
                    </span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @item.Activities?.Count()
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.CategoryId">Details</a>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
