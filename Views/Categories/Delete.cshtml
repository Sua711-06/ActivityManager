@model ActivityManager.Models.Category

@{
    ViewData["Title"] = "Delete";
    var categoryBackground = Model != null
            ? $"rgb({Model.R},{Model.G},{Model.B})"
            : "transparent";
    string badgeTextColor;
    if(Model != null) {
        var brightness = (0.299 * Model.R) + (0.587 * Model.G) + (0.114 * Model.B);
        badgeTextColor = brightness > 186 ? "#000" : "#fff";
    } else {
        badgeTextColor = "#212529";
    }
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Color
        </dt>
        <dd class = "col-sm-10">
            <span class="badge" style="background-color:@categoryBackground; color:@badgeTextColor">
                R: @Html.DisplayFor(model => model.R) G: @Html.DisplayFor(model => model.G) B: @Html.DisplayFor(model => model.B)
            </span>
        </dd>
        <dt class="col-sm-10">
            Activities
        </dt>
        <dd class="col-sm-10">
            @foreach(var activity in Model.Activities)
            {
                <div>
                    @Html.DisplayFor(modelItem => activity.Name)
                </div>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoryId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </form>
</div>
