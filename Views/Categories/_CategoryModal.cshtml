@{
    Layout = null;
}

<form asp-controller="Categories" asp-action="CreateFromModal" method="post" id="categoryFormModal">
    @Html.AntiForgeryToken()
    <div class="modal fade" id="categoryModal" tabindex="-1" aria-labelledby="categoryModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="categoryModalLabel">Add Category</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <input type="hidden" name="returnController" value="SaActivities" />
            <input type="hidden" name="returnAction" value="Create" />

            <div class="mb-3">
                <label for="Name" class="form-label">Name</label>
                <input id="Name" name="Name" class="form-control" required />
            </div>
            <div class="mb-3">
                <label for="Color" class="form-label">Color (RGB)</label>
                <input id="Color" name="Color" type="color" class="form-control form-control-color" value="#ff0000" />
                <div class="form-text">Pick a color; it will be stored as separate R, G, B values.</div>
            </div>
            <div class="mb-3">
                <label for="Description" class="form-label">Description</label>
                <textarea id="Description" name="Description" class="form-control"></textarea>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Save Category</button>
          </div>
        </div>
      </div>
    </div>
</form>