@model ActivityManager.Models.Category

@{
    ViewData["Title"] = "Details";
    var categoryBackground = Model != null ? $"rgb({Model.R}, {Model.G}, {Model.B})" : "transparent";
    string badgeTextColor;
    if(Model != null) {
        var brightness = (0.299 * Model.R) + (0.587 * Model.G) + (0.114 * Model.B);
        badgeTextColor = brightness > 186 ? "#000" : "#fff";
    } else {
        badgeTextColor = "#212529";
    }
}

<h1>Category: "@Html.DisplayFor(model => model.Name)" Details</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Color
        </dt>
        <dd class = "col-sm-10">
            <span class="badge" style="background-color:@categoryBackground; color:@badgeTextColor">
                R: @Html.DisplayFor(model => model.R) G: @Html.DisplayFor(model => model.G) B: @Html.DisplayFor(model => model.B)
            </span>
        </dd>
        <dt class="col-sm-2">
            Activities
        </dt>
        <dd class="col-sm-10 col">
            @foreach (var activity in Model.Activities){
                <a asp-controller="Home" asp-action="Details" asp-route-id="@activity.SaActivityId"><span class="badge bg-info text-dark m-1">@activity.Name</span></a>
            }
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.CategoryId">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.CategoryId">Delete</a>
</div>
