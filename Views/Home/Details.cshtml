@model ActivityManager.Models.SaActivity

@{
    ViewData["Title"] = "Details";
    var categoryBackground = Model.Category != null ? $"rgb({Model.Category.R}, {Model.Category.G}, {Model.Category.B})" : "transparent";
    string badgeTextColor;
    if (Model.Category != null)
    {
        var brightness = (0.299 * Model.Category.R) + (0.587 * Model.Category.G) + (0.114 * Model.Category.B);
        badgeTextColor = brightness > 186 ? "#000" : "#fff";
    }
    else
    {
        badgeTextColor = "#212529";
    }
}

<h1>Activity Details</h1>
<hr />
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SaActivityId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SaActivityId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Categories" asp-action="Details" asp-route-id="@Model.Category.CategoryId">
                <span class="badge" style="background-color:@categoryBackground; color:@badgeTextColor">
                    @(Model.Category != null ? Html.DisplayFor(model => model.Category.Name) : "")
                </span>
            </a>
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-controller="SaActivities" asp-action="Edit" asp-route-id="@Model.SaActivityId">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    <a class="btn btn-danger" asp-controller="SaActivities" asp-action="Delete" asp-route-id="@Model.SaActivityId">Delete</a>
</div>
